{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "src",
    "distDir": "src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Three.js Engine Editor",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "scope": ["$APPDATA/**", "$LOCALAPPDATA/**", "$RESOURCE/**", "$CWD/**"]
      },
      "dialog": {
        "all": false,
        "open": true,
        "save": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.threejs.engine.editor"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "hub",
        "fullscreen": false,
        "resizable": true,
        "title": "Three.js Editor - Project Hub",
        "width": 1000,
        "height": 700,
        "fileDropEnabled": false,
        "url": "hub/index.html"
      },
      {
        "label": "editor",
        "fullscreen": false,
        "resizable": true,
        "title": "Three.js Editor",
        "width": 1280,
        "height": 720,
        "fileDropEnabled": false,
        "url": "editor/index.html",
        "visible": false
      }
    ]
  }
}

