{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "src/editor",
    "distDir": "src/editor",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Three.js Engine Editor",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.threejs.engine.editor"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Three.js Engine Editor",
        "width": 1280,
        "height": 720,
        "fileDropEnabled": false
      }
    ]
  }
}

