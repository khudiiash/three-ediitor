{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "dev-localhost",
  "description": "allows localhost:5173 dev server to access Tauri API",
  "windows": [
    "hub",
    "editor"
  ],
  "remote": {
    "urls": [
      "http://localhost:5173",
      "http://localhost:5173/*"
    ]
  },
  "permissions": [
    "core:default",
    "dialog:allow-open",
    "dialog:allow-save",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "$DOCUMENT/**" },
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        { "path": "$DOCUMENT/**" },
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        { "path": "$DOCUMENT/**" },
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        { "path": "$DOCUMENT/**" },
        { "path": "$HOME/**" }
      ]
    },
    "fs:allow-read-dir",
    "fs:allow-create",
    "fs:allow-remove",
    "fs:allow-exists",
    "fs:allow-stat",
    "fs:allow-fstat",
    "fs:allow-lstat",
    "fs:read-meta",
    "shell:allow-open"
  ]
}
