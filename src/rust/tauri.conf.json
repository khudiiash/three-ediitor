{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Three.js Engine Editor",
  "version": "0.1.0",
  "identifier": "com.threejs.engine.editor",
  "build": {
    "frontendDist": "../editor/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": {
      "script": "npm run dev",
      "cwd": "../editor",
      "wait": false
    },
    "beforeBuildCommand": {
      "script": "npm run build",
      "cwd": "../editor"
    }
  },
  "app": {
    "windows": [
      {
        "label": "hub",
        "title": "Three.js Editor - Project Hub",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "url": "hub/index.html",
        "backgroundColor": "#1e1e1eFF"
      },
      {
        "label": "editor",
        "title": "Three.js Editor",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "url": "editor/index.html",
        "dragDropEnabled": false,
        "backgroundColor": "#1e1e1eFF"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default", "dev-localhost"]
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
